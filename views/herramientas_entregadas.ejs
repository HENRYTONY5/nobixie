        numero_empleado: 'EMP002',
        entregas: [
          { folio: 'ENT-003', herramienta: 'Herramienta de Crimping', fecha: '2025-01-08', estado: 'Entregado' }
        ]
      }
    ],
    'Pailer√≠a': [
      {
        empleado: 'Carlos Mendez Silva',
        numero_empleado: 'EMP003',
        entregas: [
          { folio: 'ENT-004', herramienta: 'Soldadora MIG', fecha: '2025-01-11', estado: 'Entregado' },
          { folio: 'ENT-005', herramienta: 'Esmeril Angular', fecha: '2025-01-13', estado: 'Entregado' },
          { folio: 'ENT-006', herramienta: 'Juego de Brocas', fecha: '2025-01-14', estado: 'Entregado' }
        ]
      }
    ],
    'Administraci√≥n': [
      {
        empleado: 'Laura Hern√°ndez Garc√≠a',
        numero_empleado: 'EMP004',
        entregas: [
          { folio: 'ENT-007', herramienta: 'Perforadora de Papel', fecha: '2025-01-09', estado: 'Entregado' },
          { folio: 'ENT-008', herramienta: 'Grapadora', fecha: '2025-01-15', estado: 'Entregado' }
        ]
      }
    ]
  };

  function filtrarPorDepartamento() {
    const departamento = document.getElementById('departamentoFilter').value;
    const contenedor = document.getElementById('contenedorEntregas');

    if (!departamento) {
      contenedor.innerHTML = `
        <div class="text-center p-5">
          <p class="text-muted"><i class="fas fa-arrow-up mr-2"></i>Selecciona un departamento para ver las entregas</p>
        </div>
      `;
      return;
    }

    // Llamar API en lugar de datos est√°ticos
    fetch(`/api/herramientas-entregadas?departamento=${encodeURIComponent(departamento)}`)
      .then(response => {
        if (!response.ok) {
          throw new Error('Error al cargar entregas');
        }
        return response.json();
      })
      .then(data => {
        if (data.success) {
          renderizarEntregas(data.empleados, data.totalEntregas, data.totalEmpleados);
        } else {
          contenedor.innerHTML = `
            <div class="sin-datos">
              <i class="fas fa-exclamation-circle"></i>
              <p>${data.message || 'Error al cargar los datos'}</p>
            </div>
          `;
        }
      })
      .catch(error => {
        console.error('Error:', error);
        contenedor.innerHTML = `
          <div class="sin-datos">
            <i class="fas fa-exclamation-triangle"></i>
            <p>Error al cargar las entregas. Intenta nuevamente.</p>
          </div>
        `;
      });
  }

  function renderizarEntregas(empleados, totalEntregasDiv, totalEmpleados) {
    const contenedor = document.getElementById('contenedorEntregas');
    let html = '';

    if (!empleados || empleados.length === 0) {
      html = `
        <div class="sin-datos">
          <i class="fas fa-box-open"></i>
          <p>No hay entregas registradas para este departamento</p>
        </div>
      `;
    } else {
      empleados.forEach((empleado, idx) => {
        const numEntregas = empleado.entregas ? empleado.entregas.length : 0;

        html += `
          <div class="row row-entrega">
            <div class="col-md-12 mb-3">
              <div class="card card-empleado border-0 shadow-sm">
                <div class="header-empleado">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h5 class="mb-1" style="font-weight: 700;">
                        <i class="fas fa-user-circle mr-2"></i>${empleado.nombre}
                      </h5>
                      <small class="text-white-50">#${empleado.numero_empleado}</small>
                    </div>
                    <span class="badge badge-light" style="font-size: 1rem; padding: 8px 12px;">
                      ${numEntregas} entrega${numEntregas !== 1 ? 's' : ''}
                    </span>
                  </div>
                </div>
                <div class="card-body p-0">
                  <div class="table-responsive">
                    <table class="table tabla-entregas mb-0">
                      <thead>
                        <tr>
                          <th style="width: 12%">Folio</th>
                          <th>Herramienta</th>
                          <th style="width: 18%">Fecha</th>
                          <th style="width: 15%">Estado</th>
                        </tr>
                      </thead>
                      <tbody>
        `;

        if (empleado.entregas && empleado.entregas.length > 0) {
          empleado.entregas.forEach(entrega => {
            const estadoBadgeClass = entrega.estado === 'Entregado' ? 'badge-success' : entrega.estado === 'Pendiente' ? 'badge-warning' : 'badge-info';
            const fecha = new Date(entrega.fecha_entrega).toLocaleDateString('es-MX', {
              year: 'numeric',
              month: 'short',
              day: 'numeric'
            });

            html += `
              <tr>
                <td><span class="numero-entrega">${entrega.folio}</span></td>
                <td><strong>${entrega.herramienta}</strong></td>
                <td>${fecha}</td>
                <td><span class="badge ${estadoBadgeClass} badge-estado">${entrega.estado}</span></td>
              </tr>
            `;
          });
        } else {
          html += `
            <tr>
              <td colspan="4" class="text-center text-muted">Sin entregas</td>
            </tr>
          `;
        }

        html += `
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        `;
      });
    }

    contenedor.innerHTML = html;
    document.getElementById('totalEntregas').textContent = totalEntregasDiv;
    document.getElementById('totalEmpleados').textContent = totalEmpleados;
  }
</script>
