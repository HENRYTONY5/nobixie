<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('template/breadcrumb', {module: 'Table Datos De Usuario'}) %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">            
            <div class="container">
              <a href="/Data" class="btn btn-primary mt-4 mb-2"> <i class="fa-regular fa-square-plus"></i></a>
              <table id="example1" class="table table-bordered table-striped text-center mt-4">
                <thead>
                  <tr class="bg-primary text-white">
                    <th scope="col">#ID</th>
                    <th scope="col">Genero</th>
                    <th scope="col">Edad</th>
                    <th scope="col">Estado Civil</th>
                    <th scope="col">Escolaridad</th>
                    <th scope="col">Tipo de Puesto</th>                  
                    <th scope="col">Categoria de Puesto</th>
                    <th scope="col">Antig√ºedad</th>
                    <th scope="col">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% results.forEach ((user) => { %>
        
                    <tr>
                      <th><%= user.id %></th>
                      <th><%= user.genero %></th>
                      <th><%= user.edad %></th>
                      <th><%= user.estado_civil %></th>
                      <th><%= user.escolaridad %></th>
                      <th><%= user.tipo_puesto %></th>
                      <th><%= user.categoria_puesto %></th>
                      <th><%= user.antiguedad %></th>

                      <td>
                        <a href="/editUser/<%= user.id %>" class="btn btn-info"> <i class="fa-regular fa-pen-to-square"></i></a>
                        <a onclick="confirmation(<%= user.id %>);" class="btn btn-danger"> <i class="fa-regular fa-trash-can"></i></a>              
                      </td>
                    </tr>                              
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
  <%- include("template/footer") %>