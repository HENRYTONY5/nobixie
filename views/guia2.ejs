            <script>
                // Función para obtener los usuarios
                async function obtenerUsuarios() {
                    try {
                        const response = await fetch('http://localhost:3000/asistencia-auth');
                        if (!response.ok) {
                            throw new Error('Error en la red');
                        }
                        const usuarios = await response.json();
                        mostrarUsuarios(usuarios);
                    } catch (error) {
                        console.error('Error:', error);
                    }
                }
        
                // Función para mostrar los usuarios en el select
                function mostrarUsuarios(usuarios) {
                    const select = document.querySelector('#usuarios-select');
                    usuarios.forEach(usuario => {
                        const option = document.createElement('option');
                        option.value = usuario.id; // O el campo que necesites
                        option.textContent = `${usuario.id_empleado}`; // Modifica según lo que quieras mostrar
                        select.appendChild(option);
                    });
                }
        
                // Llamar a la función para obtener los usuarios al cargar la página
                window.onload = obtenerUsuarios;
            </script>
