<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Gustavo Arias">
    <meta name="generator" content="Gustabin 1.0.0">
    <title>Sistema Login</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom styles for this template -->
    <link href="css/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    
    <main class="form-signin text-center shadow-lg p-3 mb-5">
      <form id="formLogin" action="/login" method="POST">
        
        <img class="mb-4" src="img/logo.png" alt="logo" width="50%" height="50%">
        
        <h5 class="card-title">Bienvenido, Ingrese.</h5> <br>
        <div class="form-floating">
          <input type="email" class="form-control" id="email" name="email" placeholder="email" autofocus>
          <label for="email">Email</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="pass" name="pass" placeholder="Password">
          <label for="pass">Contrase√±a</label>
          
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Ingresar</button>    
      </form>
      <br>
      <a href="/register" type="submit" class="w-100 btn btn-lg btn-secondary">Nuevo Usuario</a>
    </main>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
    <% if(alert) { %>
      <script>
        Swal.fire({
          title: '<%= alertTitle %>',
          text:'<%= alertMessage %>',
          icon:'<%= alertIcon %>',
          showConfirmButton: <%= showConfirmButton %>,
          timer: <%= timer %>
        }).then(()=>{
          window.location = '/<%= ruta %>'
        })
      </script>
    <% } %>

  </body>
</html>
