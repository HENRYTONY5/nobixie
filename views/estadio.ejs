                // Función para obtener los datos de la gráfica de género
                function obtenerDatos0() {
                    fetch('/datos-graficas')
                        .then(response => response.json())
                        .then(data => {
                            const generos = data.map(item => item.genero);
                            const cantidades = data.map(item => item.cantidad);
            
                            // Renderizar la gráfica de género
                            const ctx = document.getElementById('graficoGenero').getContext('2d');
                            new Chart(ctx, {
                                type: 'bar',
                                data: {
                                    labels: generos,
                                    datasets: [{
                                        label: 'Número de Trabajadores por Género',
                                        data: cantidades,
                                        backgroundColor: ['rgba(205, 99, 132, 0.6)', 'rgba(54, 162, 235, 0.6)'],
                                        borderColor: ['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)'],
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    scales: {
                                        y: {
                                            beginAtZero: true
                                        }
                                    }
                                }
                            });
                        })
                        .catch(error => console.error('Error al obtener los datos:', error));
                }
            
