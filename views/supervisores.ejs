<%- include("template/header") %>
    <%- include("template/navbar") %>
        <%- include("template/aside") %>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <%- include('template/breadcrumb', {module: 'Supervisores' }) %>
                    <!-- Content Header (Page header) -->
                    <section class="content-header">
                        <div class="container-fluid">
                            <!-- TARJETA PRINCIPAL INTRO -->
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%); border-radius: 15px;">
                                        <div class="card-body text-white p-5">
                                            <div class="d-flex align-items-center">
                                                <div style="font-size: 3rem; margin-right: 20px;">
                                                    <i class="fas fa-user-tie"></i>
                                                </div>
                                                <div>
                                                    <h2 class="card-title mb-2" style="font-weight: 700;">Gestión de Supervisores</h2>
                                                    <p class="mb-0 text-white-50">Visualiza todos los supervisores y los empleados bajo su mando.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- SECCIÓN LISTADO DE SUPERVISORES -->
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <div class="section-title-wrapper d-flex align-items-center mb-4">
                                        <div style="width: 5px; height: 40px; background: linear-gradient(135deg, #2563eb, #1e40af); border-radius: 3px; margin-right: 15px;"></div>
                                        <h3 class="text-dark mb-0" style="font-weight: 700; font-size: 1.75rem;">
                                            <i class="fas fa-list mr-2"></i>Listado de Supervisores
                                        </h3>
                                    </div>
                                </div>
                            </div>

                            <!-- SUPERVISORES CONTAINER -->
                            <div class="row" id="supervisoresContainer">
                                <div class="col-md-12">
                                    <div class="text-center p-5">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="sr-only">Cargando...</span>
                                        </div>
                                        <p class="mt-3 text-muted">Cargando supervisores...</p>
                                    </div>
                                </div>
                            </div>

                        </div><!-- /.container-fluid -->
                    </section>
                    <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->

            <%- include("template/footer") %>

<script>
  // Cargar supervisores al abrir la página
  document.addEventListener('DOMContentLoaded', function() {
    cargarSupervisores();
  });

  function cargarSupervisores() {
    fetch('/api/supervisores', {
      credentials: 'include'
    })
      .then(response => response.json())
      .then(data => {
        if (data.success && data.supervisores && data.supervisores.length > 0) {
          mostrarSupervisores(data.supervisores);
        } else {
          document.getElementById('supervisoresContainer').innerHTML = `
            <div class="col-md-12">
              <div class="alert alert-info text-center">
                <i class="fas fa-info-circle mr-2"></i>
                No hay supervisores registrados en el sistema
              </div>
            </div>
          `;
        }
      })
      .catch(error => {
        console.error('Error:', error);
        document.getElementById('supervisoresContainer').innerHTML = `
          <div class="col-md-12">
            <div class="alert alert-danger text-center">
              <i class="fas fa-exclamation-triangle mr-2"></i>
              Error al cargar los supervisores
            </div>
          </div>
        `;
      });
  }

  function mostrarSupervisores(supervisores) {
    let html = '<div class="col-md-12"><div class="row">';
    
    supervisores.forEach(supervisor => {
      const cantidadEmpleados = supervisor.empleados ? supervisor.empleados.length : 0;
      
      html += `
        <div class="col-lg-6 col-md-12 mb-4">
          <div class="card border-0 shadow-lg h-100 transition-all" 
               style="border-radius: 12px; overflow: hidden; cursor: pointer; transition: all 0.3s ease;"
               onmouseover="this.style.transform='translateY(-8px)'; this.style.boxShadow='0 15px 35px rgba(37, 99, 235, 0.3)'" 
               onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 10px 25px rgba(0,0,0,0.1)'">
            
            <!-- Header con gradiente -->
            <div style="background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%); padding: 25px; color: white;">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <h5 class="mb-2" style="font-weight: 700; font-size: 1.3rem;">
                    <i class="fas fa-user-tie mr-2"></i>${supervisor.nombre_supervisor}
                  </h5>
                  <p class="mb-0 text-white-50 small">
                    <i class="fas fa-envelope mr-1"></i>${supervisor.email}
                  </p>
                </div>
                <div style="text-align: center;">
                  <div style="font-size: 2.5rem; opacity: 0.2; margin-bottom: 5px;">
                    <i class="fas fa-user-tie"></i>
                  </div>
                  <span class="badge badge-light" style="font-size: 1.1rem; padding: 8px 12px;">
                    ${cantidadEmpleados} empleado${cantidadEmpleados !== 1 ? 's' : ''}
                  </span>
                </div>
              </div>
            </div>

            <!-- Body con tabla de empleados -->
            <div class="card-body pt-3">
              ${cantidadEmpleados > 0 ? `
                <div class="table-responsive">
                  <table class="table table-sm table-hover mb-0">
                    <thead class="bg-light">
                      <tr>
                        <th style="color: #2563eb; font-weight: 600;">Número</th>
                        <th style="color: #2563eb; font-weight: 600;">Nombre</th>
                        <th style="color: #2563eb; font-weight: 600;">Puesto</th>
                        <th style="color: #2563eb; font-weight: 600;">Departamento</th>
                      </tr>
                    </thead>
                    <tbody>
                      ${supervisor.empleados.map(emp => `
                        <tr style="border-bottom: 1px solid #f0f0f0;">
                          <td>
                            <span class="badge" style="background-color: #2563eb;">
                              ${emp.numero_empleado}
                            </span>
                          </td>
                          <td>
                            <strong>${emp.nombre}</strong><br>
                            <small class="text-muted">${emp.email}</small>
                          </td>
                          <td>${emp.puesto}</td>
                          <td>
                            <span class="badge badge-info">
                              ${emp.departamento}
                            </span>
                          </td>
                        </tr>
                      `).join('')}
                    </tbody>
                  </table>
                </div>
              ` : `
                <div class="alert alert-warning mb-0">
                  <i class="fas fa-exclamation-circle mr-2"></i>
                  No tiene empleados asignados aún
                </div>
              `}
            </div>

            <!-- Footer con acciones -->
            <div class="card-footer bg-white border-top" style="padding: 15px;">
              <div class="row">
                <div class="col-6">
                  <button class="btn btn-sm btn-primary w-100" onclick="abrirModalEditarSupervisor('${supervisor.id}', '${supervisor.nombre_supervisor}')">
                    <i class="fas fa-edit mr-1"></i> Detalles
                  </button>
                </div>
                <div class="col-6">
                  <button class="btn btn-sm btn-success w-100" onclick="abrirModalAsignarEmpleado('${supervisor.id}', '${supervisor.nombre_supervisor}')">
                    <i class="fas fa-plus mr-1"></i> Asignar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      `;
    });
    
    html += '</div></div>';
    document.getElementById('supervisoresContainer').innerHTML = html;
  }

  function abrirModalEditarSupervisor(supervisorId, nombre) {
    Swal.fire({
      title: `<strong>${nombre}</strong>`,
      html: `
        <div class="text-left">
          <p><strong>ID:</strong> ${supervisorId}</p>
          <p><strong>Opciones disponibles:</strong></p>
          <p>
            <button class="btn btn-sm btn-info mr-2" onclick="editarSupervisor('${supervisorId}')">
              <i class="fas fa-edit mr-1"></i> Editar
            </button>
            <button class="btn btn-sm btn-danger" onclick="eliminarSupervisor('${supervisorId}')">
              <i class="fas fa-trash mr-1"></i> Eliminar
            </button>
          </p>
        </div>
      `,
      icon: 'info',
      confirmButtonText: 'Cerrar',
      confirmButtonColor: '#2563eb'
    });
  }

  function editarSupervisor(supervisorId) {
    console.log('Editar supervisor:', supervisorId);
    Swal.fire('Información', 'Función de edición en desarrollo', 'info');
  }

  function eliminarSupervisor(supervisorId) {
    Swal.fire({
      title: '¿Eliminar supervisor?',
      text: 'Esta acción no se puede deshacer',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Sí, eliminar',
      cancelButtonText: 'Cancelar'
    }).then((result) => {
      if (result.isConfirmed) {
        console.log('Eliminar supervisor:', supervisorId);
        Swal.fire('Información', 'Función de eliminación en desarrollo', 'info');
      }
    });
  }

  function abrirModalAsignarEmpleado(supervisorId, supervisorNombre) {
    document.getElementById('supervisorIdAsignacion').value = supervisorId;
    document.getElementById('supervisorNombreAsignacion').textContent = supervisorNombre;
    
    cargarDepartamentos();
    
    $('#modalAsignarEmpleadoSupervisores').modal('show');
  }

  function cargarEmpleadosDisponibles(supervisorId) {
    fetch('/api/empleados', {
      credentials: 'include'
    })
      .then(response => {
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        return response.json();
      })
      .then(data => {
        console.log('Datos de empleados recibidos:', data);
        const selectEmpleado = document.getElementById('empleadoSelectSupervisores');
        
        if (!selectEmpleado) {
          console.error('Elemento empleadoSelectSupervisores no encontrado');
          return;
        }
        
        selectEmpleado.innerHTML = '<option value="">-- Seleccione un empleado --</option>';
        
        if (data.success && data.empleados && data.empleados.length > 0) {
          data.empleados.forEach(emp => {
            const option = document.createElement('option');
            option.value = emp.id;
            option.textContent = `${emp.numero_empleado} - ${emp.nombre}`;
            selectEmpleado.appendChild(option);
          });
        } else {
          selectEmpleado.innerHTML = '<option value="">No hay empleados disponibles</option>';
        }
      })
      .catch(error => {
        console.error('Error al cargar empleados:', error);
        const selectEmpleado = document.getElementById('empleadoSelectSupervisores');
        if (selectEmpleado) {
          selectEmpleado.innerHTML = '<option value="">Error al cargar empleados</option>';
        }
      });
  }

  function cargarDepartamentos() {
    const selectDepartamento = document.getElementById('departamentoSelectSupervisores');
    
    if (!selectDepartamento) {
      console.error('Elemento departamentoSelectSupervisores no encontrado');
      return;
    }
    
    const departamentos = ['Pailería', 'Administración', 'Eléctricos', 'Mantenimiento'];
    
    selectDepartamento.innerHTML = '<option value="">-- Seleccione departamento --</option>';
    departamentos.forEach(dept => {
      const option = document.createElement('option');
      option.value = dept;
      option.textContent = dept;
      selectDepartamento.appendChild(option);
    });
  }

  function guardarAsignacionEmpleado() {
    const supervisorId = document.getElementById('supervisorIdAsignacion').value;
    const departamento = document.getElementById('departamentoSelectSupervisores').value;
    
    if (!supervisorId || !departamento) {
      Swal.fire('Error', 'Debes seleccionar un supervisor y un departamento', 'error');
      return;
    }
    
    Swal.fire({
      title: '¿Asignar departamento?',
      html: `Se asignarán todos los empleados del departamento <strong>${departamento}</strong> a este supervisor`,
      icon: 'question',
      showCancelButton: true,
      confirmButtonColor: '#28a745',
      cancelButtonColor: '#6c757d',
      confirmButtonText: 'Sí, asignar',
      cancelButtonText: 'Cancelar'
    }).then((result) => {
      if (result.isConfirmed) {
        fetch('/api/supervisores/asignar-departamento', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          credentials: 'include',
          body: JSON.stringify({
            supervisor_id: supervisorId,
            departamento: departamento
          })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            Swal.fire('Éxito', `${data.cantidad || 0} empleados asignados correctamente`, 'success');
            
            $('#modalAsignarEmpleadoSupervisores').modal('hide');
            
            cargarSupervisores();
          } else {
            Swal.fire('Error', data.message || 'No se pudo asignar el departamento', 'error');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire('Error', 'Error al asignar departamento', 'error');
        });
      }
    });
  }
</script>

<!-- MODAL PARA ASIGNAR EMPLEADO A SUPERVISOR -->
<div class="modal fade" id="modalAsignarEmpleadoSupervisores" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title">
          <i class="fas fa-briefcase mr-2"></i>Asignar Departamento a <span id="supervisorNombreAsignacion"></span>
        </h5>
        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="supervisorIdAsignacion">
        
        <div class="alert alert-info" role="alert">
          <i class="fas fa-info-circle mr-2"></i>
          <strong>Nota:</strong> Se asignarán todos los empleados del departamento seleccionado a este supervisor.
        </div>

        <div class="form-group">
          <label for="departamentoSelectSupervisores" class="form-label"><strong>Departamento a Asignar:</strong></label>
          <select class="form-control form-control-lg" id="departamentoSelectSupervisores" required>
            <option value="">-- Seleccione un departamento --</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-success btn-lg" onclick="guardarAsignacionEmpleado()">
          <i class="fas fa-check mr-1"></i> Asignar Departamento
        </button>
      </div>
    </div>
  </div>
</div>
