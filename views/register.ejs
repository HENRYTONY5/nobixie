<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Gustavo Arias">
    <meta name="generator" content="Gustabin 1.0.0">
    <title>Sistema Register</title> 

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom styles for this template -->
    <link href="css/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <main class="form-signin text-center shadow-lg p-3 mb-5">
      <form action="/register" method="POST">        
        <img class="mb-4" src="img/logo.png" alt="logo" width="50%" height="50%">
        <div class="form-floating">
          <input type="text" class="form-control" id="name" name="name" placeholder="Name" autofocus required>
          <label for="name">Nombre</label>
        </div>
        <div class="form-floating">
          <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
          <label for="email">Email</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="pass" name="pass" placeholder="Password" required>
          <label for="pass">Contraseña</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="pass_confirm" name="pass_confirm" placeholder="Confirmar Password" required>
          <label for="pass_confirm">Confirmar Contraseña</label>
        </div>
        <div class="form-floating">
          
          <select id="rol" name= "rol" class="form-select">
            <option value ="Admin"> Admin</option>
            <option value="AgenteL"> Agente Lider</option>
            <option value="AgenteLec"> Agente Lector</option>
            <option value="AgenteE"> Agente Escritor</option>
            <option value="AgenteEsp"> Agente Especialista</option>
        </select>
        </div><br>
        
        <div  class="mb-3">          
          <button class="w-100 btn btn-lg btn-primary" type="submit">Guardar</button>   
        </div>
        <div>          
          <a href="/login" type="button" class="w-100 btn btn-lg btn-bd-primary">Cancelar</a> 
        </div>
      </form>
    </main>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) { %>
      <script>
        Swal.fire({
          title: '<%= alertMessage %>',
          icon: 'success',
          showConfirmButton: false,
          timer: 2000
        }).then(() => {
          <% if(alertMessage.includes('correctamente')) { %>
            window.location = '/login'
          <% } %>
        })
      </script>
    <% } %>
  </body>
  </body>
</html>